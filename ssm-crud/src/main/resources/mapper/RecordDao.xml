<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java.dao.RecordDao">

    <resultMap type="com.java.entity.Record" id="RecordMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="person" column="person" jdbcType="VARCHAR"/>
        <result property="community" column="community" jdbcType="VARCHAR"/>
        <result property="tel" column="tel" jdbcType="VARCHAR"/>
        <result property="carnum" column="carNum" jdbcType="VARCHAR"/>
        <result property="isoutcity" column="isOutCity" jdbcType="OTHER"/>
        <result property="isformhb" column="isFormHB" jdbcType="OTHER"/>
        <result property="ishousehold" column="isHousehold" jdbcType="OTHER"/>
        <result property="nowtime" column="nowTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RecordMap">
        select
          id, person, community, tel, carNum, isOutCity, isFormHB, isHousehold, nowTime
        from record.record
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RecordMap">
        select
          id, person, community, tel, carNum, isOutCity, isFormHB, isHousehold, nowTime
        from record.record
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="RecordMap">
        select
          id, person, community, tel, carNum, isOutCity, isFormHB, isHousehold, nowTime
        from record.record
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="person != null and person != ''">
                and person = #{person}
            </if>
            <if test="community != null and community != ''">
                and community = #{community}
            </if>
            <if test="tel != null and tel != ''">
                and tel = #{tel}
            </if>
            <if test="carnum != null and carnum != ''">
                and carNum = #{carnum}
            </if>
            <if test="isoutcity != null">
                and isOutCity = #{isoutcity}
            </if>
            <if test="isformhb != null">
                and isFormHB = #{isformhb}
            </if>
            <if test="ishousehold != null">
                and isHousehold = #{ishousehold}
            </if>
            <if test="nowtime != null">
                and nowTime = #{nowtime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into record.record(person, community, tel, carNum, isOutCity, isFormHB, isHousehold, nowTime)
        values (#{person}, #{community}, #{tel}, #{carnum}, #{isoutcity}, #{isformhb}, #{ishousehold}, #{nowtime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update record.record
        <set>
            <if test="person != null and person != ''">
                person = #{person},
            </if>
            <if test="community != null and community != ''">
                community = #{community},
            </if>
            <if test="tel != null and tel != ''">
                tel = #{tel},
            </if>
            <if test="carnum != null and carnum != ''">
                carNum = #{carnum},
            </if>
            <if test="isoutcity != null">
                isOutCity = #{isoutcity},
            </if>
            <if test="isformhb != null">
                isFormHB = #{isformhb},
            </if>
            <if test="ishousehold != null">
                isHousehold = #{ishousehold},
            </if>
            <if test="nowtime != null">
                nowTime = #{nowtime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from record.record where id = #{id}
    </delete>

</mapper>